                hasApp: true,
                patterns: {
                    identifiers: ['mini', 'crossword', 'solved', 'average time', 'best time'],
                    stats: {
                        solved: /(?:(\d[\d,]*)\s*solved|solved\s*(\d[\d,]*))/i,
                        avgTime: /average.*?(\d+):(\d+)/i,
                        bestTime: /best.*?(\d+):(\d+)/i
                    }
                }
            },
            queens: {
                id: 'queens',
                name: 'Queens',
                icon: 'ðŸ‘‘',
                publisher: 'LinkedIn',
                webUrl: 'https://www.linkedin.com/games/queens',
                hasApp: false,
                comingSoon: true
            },
            tango: {
                id: 'tango',
                name: 'Tango',
                icon: 'ðŸŒ—',
                publisher: 'LinkedIn',
                webUrl: 'https://www.linkedin.com/games/tango',
                hasApp: false,
                comingSoon: true
            }
        };
        
        // ============ STATE ============
        let selectedGame = null;
        let selectedPlatform = null;
        let extractedStats = {};
        let tesseractWorker = null;
        let currentImage = null;
        
        // ============ PLATFORM DETECTION ============
        function detectPlatform() {
            const ua = navigator.userAgent.toLowerCase();
            if (/iphone|ipad|ipod/.test(ua)) return 'ios';
            if (/android/.test(ua)) return 'android';
            return 'desktop';
        }
        
        const currentPlatform = detectPlatform();
        
        // ============ INITIALIZATION ============
        function init() {
            renderGameGrid();
            setupEventListeners();
            initTesseract();
        }
        
        function renderGameGrid() {
            const grid = document.getElementById('game-grid');
            grid.innerHTML = Object.values(GAMES).map(game => `
                <div class="game-option ${game.comingSoon ? 'disabled' : ''}" 
                     data-game="${game.id}"
                     onclick="selectGame('${game.id}')">
                    <div class="icon">${game.icon}</div>
                    <div class="name">${game.name}</div>
                    ${game.comingSoon ? '<div class="coming-soon">Coming Soon</div>' : ''}
                </div>
            `).join('');
        }
        
        function setupEventListeners() {
            // File upload
            const uploadZone = document.getElementById('upload-zone');
            const fileInput = document.getElementById('file-input');
            
            uploadZone.addEventListener('click', () => fileInput.click());
            fileInput.addEventListener('change', handleFileSelect);
            
            // Drag and drop
            uploadZone.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadZone.classList.add('dragover');
            });
            uploadZone.addEventListener('dragleave', () => {
                uploadZone.classList.remove('dragover');
            });
            uploadZone.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadZone.classList.remove('dragover');
                if (e.dataTransfer.files.length) {
                    handleFile(e.dataTransfer.files[0]);
                }
            });
            
            // Continue button
            document.getElementById('btn-select-continue').addEventListener('click', () => {
                if (selectedGame) goToScreen('instructions');
            });
            
            // Confirm button
            document.getElementById('btn-confirm').addEventListener('click', confirmSetup);
        }
        
        async function initTesseract() {
            try {
                tesseractWorker = await Tesseract.createWorker('eng');
                debug('Tesseract ready');
            } catch (e) {
                console.error('Failed to init Tesseract:', e);
            }
        }
        
        // ============ GAME SELECTION ============
        function selectGame(gameId) {
            const game = GAMES[gameId];
            if (!game || game.comingSoon) return;
            
            selectedGame = game;
            
            // Update UI
            document.querySelectorAll('.game-option').forEach(el => {
                el.classList.toggle('selected', el.dataset.game === gameId);
            });
            
            document.getElementById('btn-select-continue').disabled = false;
            
            // Update instruction screen
            document.getElementById('instruction-game-icon').textContent = game.icon;
            document.getElementById('instruction-game-name').textContent = game.name;
            document.getElementById('instruction-game-name2').textContent = game.name;
            document.getElementById('waiting-game-name').textContent = game.name;
        }
        
        // ============ SCREEN NAVIGATION ============
        function goToScreen(screenName) {
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.getElementById(`screen-${screenName}`).classList.add('active');
            
            // Update steps
            const stepMap = { select: 1, instructions: 1, waiting: 2, analyzing: 3, results: 4, complete: 4 };
            const currentStep = stepMap[screenName] || 1;
            
            document.querySelectorAll('.step-dot').forEach(dot => {
                const step = parseInt(dot.dataset.step);
                dot.classList.remove('active', 'complete');
                if (step < currentStep) dot.classList.add('complete');
                if (step === currentStep) dot.classList.add('active');
            });
        }
        
        // ============ FILE HANDLING ============
        function handleFileSelect(e) {
            if (e.target.files.length) {
                handleFile(e.target.files[0]);
            }
        }
        
        function handleFile(file) {
            if (!file.type.startsWith('image/')) {
                showToast('Please upload an image', 'error');
                return;
            }
            
            const reader = new FileReader();
            reader.onload = (e) => {
                currentImage = e.target.result;
                document.getElementById('preview-thumbnail').src = currentImage;
                goToScreen('analyzing');
                analyzeScreenshot();
            };
            reader.readAsDataURL(file);
        }
        
        // ============ OCR ANALYSIS ============
        async function analyzeScreenshot() {
            const statusEl = document.getElementById('analyzing-status');
            const progressEl = document.getElementById('progress-fill');
            
            statusEl.textContent = 'Running text recognition...';
            progressEl.style.width = '10%';
            
            try {
                // Run OCR
                const result = await tesseractWorker.recognize(currentImage, {}, {
                    logger: m => {
                        if (m.status === 'recognizing text') {
                            progressEl.style.width = `${10 + (m.progress * 70)}%`;
                        }
                    }
                });
                
                statusEl.textContent = 'Extracting stats...';
                progressEl.style.width = '85%';
                
                const text = result.data.text;
                const confidence = result.data.confidence;
                
                debug(`OCR confidence: ${confidence}%`);
                debug(`Text: ${text.substring(0, 100)}...`);
                
                // Verify it matches selected game
                const game = selectedGame;
                let matchScore = 0;
                
                for (const pattern of game.patterns.identifiers) {
                    if (text.toLowerCase().includes(pattern.toLowerCase())) {
                        matchScore++;
                    }
                }
                
                if (matchScore < 2) {
                    // Doesn't look like the right game
                    showToast(`This doesn't look like ${game.name} stats. Try another screenshot.`, 'error');
                    goToScreen('waiting');
                    return;
                }
                
                // Extract stats
                extractedStats = {};
                for (const [key, pattern] of Object.entries(game.patterns.stats || {})) {
                    const match = text.match(pattern);
                    if (match) {
                        // Handle capture groups (some patterns have two groups for different formats)
                        extractedStats[key] = match[1] || match[2];
                    }
                }
                
                statusEl.textContent = 'Done!';
                progressEl.style.width = '100%';
                
                setTimeout(() => showResults(), 500);
                
            } catch (e) {
                console.error('OCR error:', e);
                showToast('Failed to analyze screenshot', 'error');
                goToScreen('waiting');
            }
        }
        
        // ============ RESULTS & QUESTIONS ============
        function showResults() {
            const game = selectedGame;
            
            // Update title
            document.getElementById('results-title').textContent = `${game.icon} ${game.name} Detected!`;
            document.getElementById('question-game-name').textContent = game.name;
            
            // Show stats
            const statsGrid = document.getElementById('stats-grid');
            const statLabels = {
                played: 'Played',
                winPercent: 'Win %',
                currentStreak: 'Current Streak',
                maxStreak: 'Max Streak',
                solved: 'Solved',
                hintsUsed: 'Hints Used',
                puzzlesPlayed: 'Puzzles',
                geniuses: 'Geniuses',
                avgTime: 'Avg Time',
                bestTime: 'Best Time'
            };
            
            if (Object.keys(extractedStats).length > 0) {
                statsGrid.innerHTML = Object.entries(extractedStats).map(([key, value]) => `
                    <div class="stat-item">
                        <div class="stat-value">${value}</div>
                        <div class="stat-label">${statLabels[key] || key}</div>
                    </div>
                `).join('');
                document.getElementById('stats-found').style.display = 'block';
            } else {
                document.getElementById('stats-found').style.display = 'none';
            }
            
            // Show platform question
            renderPlatformOptions();
            
            goToScreen('results');
        }
        
        function renderPlatformOptions() {
            const game = selectedGame;
            const container = document.getElementById('platform-options');
            
            let options = [];
            
            if (game.hasApp) {
                if (currentPlatform === 'ios') {
                    options = [
                        { id: 'nyt-ios', icon: 'ðŸ“±', label: 'NYT Games App', desc: 'The app with the red icon' },
                        { id: 'browser-ios', icon: 'ðŸŒ', label: 'Safari Browser', desc: 'nytimes.com in Safari' }
                    ];
                } else if (currentPlatform === 'android') {
                    options = [
                        { id: 'nyt-android', icon: 'ðŸ“±', label: 'NYT Games App', desc: 'The app from Play Store' },
                        { id: 'browser-android', icon: 'ðŸŒ', label: 'Chrome Browser', desc: 'nytimes.com in Chrome' }
                    ];
                } else {
                    options = [
                        { id: 'browser-desktop', icon: 'ðŸŒ', label: 'Web Browser', desc: 'Chrome, Safari, Firefox, etc.' },
                        { id: 'browser-extension', icon: 'ðŸ”Œ', label: 'Browser + Extension', desc: 'Auto-capture with extension' }
                    ];
                }
            } else {
                // Browser-only games
                options = [
                    { id: 'browser-' + currentPlatform, icon: 'ðŸŒ', label: 'Web Browser', desc: 'The only way to play' }
                ];
            }
            
            container.innerHTML = options.map(opt => `
                <button class="option-btn" data-platform="${opt.id}" onclick="selectPlatform('${opt.id}')">
                    <div class="opt-icon">${opt.icon}</div>
                    <div>
                        <div class="opt-label">${opt.label}</div>
                        <div class="opt-desc">${opt.desc}</div>
                    </div>
                </button>
            `).join('');
        }
        
        function selectPlatform(platformId) {
            selectedPlatform = platformId;
            
            document.querySelectorAll('.option-btn').forEach(btn => {
                btn.classList.toggle('selected', btn.dataset.platform === platformId);
            });
            
            document.getElementById('btn-confirm').disabled = false;
        }
        
        // ============ COMPLETE SETUP ============
        function confirmSetup() {
            const game = selectedGame;
            
            // Save configuration
            const config = {
                gameId: game.id,
                gameName: game.name,
                platform: selectedPlatform,
                stats: extractedStats,
                launchInApp: ['nyt-ios', 'nyt-android'].includes(selectedPlatform),
                configuredAt: new Date().toISOString()
            };
            
            // Save to localStorage (in real app, would sync to cloud)
            const savedGames = JSON.parse(localStorage.getItem('gameshelf_configured') || '{}');
            savedGames[game.id] = config;
            localStorage.setItem('gameshelf_configured', JSON.stringify(savedGames));
            
            // Update complete screen
            document.getElementById('complete-game-name').textContent = game.name;
            
            const platformLabels = {
                'nyt-ios': 'NYT App (iOS)',
                'nyt-android': 'NYT App (Android)',
                'browser-ios': 'Safari Browser',
                'browser-android': 'Chrome Browser',
                'browser-desktop': 'Web Browser',
                'browser-extension': 'Browser + Extension'
            };
            
            document.getElementById('config-summary').innerHTML = `
                <div class="config-row">
                    <span class="config-label">Game</span>
                    <span class="config-value">${game.icon} ${game.name}</span>
                </div>
                <div class="config-row">
                    <span class="config-label">Launch Method</span>
                    <span class="config-value">${platformLabels[selectedPlatform]}</span>
                </div>
                ${extractedStats.currentStreak ? `
                <div class="config-row">
                    <span class="config-label">Current Streak</span>
                    <span class="config-value">${extractedStats.currentStreak} days</span>
                </div>
                ` : ''}
            `;
            
            showToast(`${game.name} configured!`, 'success');
            goToScreen('complete');
        }
        
        function addAnotherGame() {
            // Reset state
            selectedGame = null;
            selectedPlatform = null;
            extractedStats = {};
            currentImage = null;
            
            document.querySelectorAll('.game-option').forEach(el => el.classList.remove('selected'));
            document.getElementById('btn-select-continue').disabled = true;
            document.getElementById('btn-confirm').disabled = true;
            document.getElementById('file-input').value = '';
            
            goToScreen('select');
        }
        
        function finishSetup() {
            // Show what was configured
            const saved = JSON.parse(localStorage.getItem('gameshelf_configured') || '{}');
            const count = Object.keys(saved).length;
            
            showToast(`Setup complete! ${count} game${count !== 1 ? 's' : ''} configured.`, 'success');
            
            // In real app, would navigate to main Game Shelf view
        }
        
        // ============ UTILITIES ============
        function showToast(message, type = '') {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = 'toast visible ' + type;
            
            setTimeout(() => {
                toast.classList.remove('visible');
            }, 3000);
        }
        
        function debug(msg) {
            console.log('[DEBUG]', msg);
            const panel = document.getElementById('debug-panel');
            panel.innerHTML = msg;
            // panel.classList.add('show'); // Uncomment to show debug panel
        }
        
        // ============ START ============
        init();
    </script>
</body>
</html>
