        const SOCIALS = [
            { id: 'imessage', name: 'iMessage', icon: 'üí¨' },
            { id: 'twitter', name: 'X', icon: 'ùïè' },
            { id: 'facebook', name: 'Facebook', icon: 'üìò' },
            { id: 'threads', name: 'Threads', icon: 'üßµ' },
            { id: 'discord', name: 'Discord', icon: 'üéÆ' },
            { id: 'slack', name: 'Slack', icon: 'üíº' },
            { id: 'whatsapp', name: 'WhatsApp', icon: 'üíö' },
            { id: 'other', name: 'Other', icon: '‚ûï' }
        ];

        const STAT_PATTERNS = {
            played: [/(\d+)\s+played/i, /played\s*[:\s]*(\d+)/i],
            winPercent: [/(\d+)\s*%?\s*win\s*%?/i, /win\s*%?\s*(\d+)/i],
            streak: [/(\d+)\s+current\s+streak/i, /current\s+streak\s+(\d+)/i, /(\d+)\s*day\s*streak/i],
            maxStreak: [/(\d+)\s+max\s+streak/i, /max\s+streak\s+(\d+)/i]
        };

        // STATE
        let currentPath = null;
        let selectedGameId = null;
        let currentImage = null;
        let detectedStats = {};
        let selectedPlatform = null;
        let selectedLaunchType = null;
        let addedGames = [];
        let questionsSelectedGames = new Set();
        let sharingMethods = new Set();
        let socialPlatforms = new Set();

        // INIT
        function init() {
            ['game-grid-screenshot', 'game-grid-questions'].forEach(id => {
                const grid = document.getElementById(id);
                if (grid) {
                    grid.innerHTML = Object.entries(GAMES).map(([gid, g]) => `
                        <div class="game-btn" data-game="${gid}" onclick="selectGame('${gid}', this, '${id}')">
                            <div class="icon">${g.icon}</div>
                            <div class="name">${g.name}</div>
                            <div class="publisher">${g.publisher}</div>
                        </div>
                    `).join('');
                }
            });
            
            const socialGrid = document.getElementById('social-grid');
            if (socialGrid) {
                socialGrid.innerHTML = SOCIALS.map(s => `
                    <div class="social-btn" onclick="toggleSocial('${s.id}', this)">
                        <div class="icon">${s.icon}</div>
                        <div class="name">${s.name}</div>
                    </div>
                `).join('');
            }
        }

        function goToScreen(id) {
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.getElementById(id).classList.add('active');
        }

        function goBack() {
            if (currentPath === 'screenshot') goToScreen('screen-screenshot-guide');
            else goToScreen('screen-questions');
        }

        // PATH SELECTION
        function startScreenshotPath() {
            currentPath = 'screenshot';
            goToScreen('screen-select-game');
        }

        function startQuestionsPath() {
            currentPath = 'questions';
            goToScreen('screen-questions');
        }

        // GAME SELECTION
        function selectGame(gameId, el, gridId) {
            if (gridId === 'game-grid-screenshot') {
                document.querySelectorAll(`#${gridId} .game-btn`).forEach(b => b.classList.remove('selected'));
                el.classList.add('selected');
                selectedGameId = gameId;
                document.getElementById('btn-show-guide').disabled = false;
            } else {
                el.classList.toggle('selected');
                if (el.classList.contains('selected')) questionsSelectedGames.add(gameId);
                else questionsSelectedGames.delete(gameId);
                document.getElementById('btn-questions-next').disabled = questionsSelectedGames.size === 0;
            }
        }

        // SCREENSHOT PATH
        function showScreenshotGuide() {
            if (!selectedGameId) return;
            const g = GAMES[selectedGameId];
            document.getElementById('guide-title').textContent = g.screenshotGuide.title;
            document.getElementById('screenshot-guide-content').innerHTML = `
                <div class="steps">
                    ${g.screenshotGuide.steps.map((s, i) => `
                        <div class="step">
                            <div class="step-num">${i + 1}</div>
                            <div class="step-text">${s}</div>
                        </div>
                    `).join('')}
                </div>
            `;
            goToScreen('screen-screenshot-guide');
        }

        function handleFileUpload(e) {
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = (ev) => {
                currentImage = ev.target.result;
                const area = document.getElementById('upload-area');
                area.classList.add('has-image');
                area.innerHTML = `<img src="${currentImage}" class="upload-preview">`;
                document.getElementById('analyze-btn').disabled = false;
            };
            reader.readAsDataURL(file);
        }

        async function analyzeImage() {
            goToScreen('screen-analyzing');
            const status = document.getElementById('analyzing-status');
            try {
                status.textContent = 'Loading OCR...';
                const result = await Tesseract.recognize(currentImage, 'eng', {
                    logger: m => {
                        if (m.status === 'recognizing text') status.textContent = `Analyzing... ${Math.round(m.progress * 100)}%`;
                    }
                });
                detectedStats = extractStats(result.data.text);
                showConfirmScreen();
                goToScreen('screen-confirm');
            } catch (err) {
                console.error(err);
                alert('Error. Try again.');
                goToScreen('screen-screenshot-guide');
            }
        }

        function extractStats(text) {
            const stats = {};
            for (const [id, patterns] of Object.entries(STAT_PATTERNS)) {
                for (const p of patterns) {
                    const m = text.match(p);
                    if (m?.[1]) { stats[id] = m[1]; break; }
                }
            }
            return stats;
        }

        function showConfirmScreen() {
            const g = GAMES[selectedGameId];
            let statsHtml = '';
            if (Object.keys(detectedStats).length) {
                statsHtml = '<div class="stats-grid">';
                if (detectedStats.played) statsHtml += `<div class="stat-item"><div class="stat-value">${detectedStats.played}</div><div class="stat-label">Played</div></div>`;
                if (detectedStats.winPercent) statsHtml += `<div class="stat-item"><div class="stat-value">${detectedStats.winPercent}%</div><div class="stat-label">Win %</div></div>`;
                if (detectedStats.streak) statsHtml += `<div class="stat-item"><div class="stat-value">${detectedStats.streak}</div><div class="stat-label">Streak</div></div>`;
                if (detectedStats.maxStreak) statsHtml += `<div class="stat-item"><div class="stat-value">${detectedStats.maxStreak}</div><div class="stat-label">Max</div></div>`;
                statsHtml += '</div>';
            }
            document.getElementById('detection-result').innerHTML = `
                <div class="game-detected">
                    <div class="game-icon-lg">${g.icon}</div>
                    <div class="game-info">
                        <h3>${g.name}</h3>
                        <div class="publisher">${g.publisher}</div>
                    </div>
                </div>
                ${statsHtml}
            `;
            document.getElementById('hub-label').textContent = g.publisher === 'NYT' ? 'nytimes.com/games' : g.publisher === 'LinkedIn' ? 'linkedin.com/games' : 'Games hub';
            document.getElementById('launch-options').style.display = 'none';
            document.querySelectorAll('#platform-options .option-btn, #launch-options .option-btn').forEach(b => b.classList.remove('selected'));
            selectedPlatform = null;
            selectedLaunchType = null;
            document.getElementById('btn-confirm').disabled = true;
        }

        // QUESTIONS PATH
        function questionsNext() {
            questionsSelectedGames.forEach(gid => {
                const g = GAMES[gid];
                addedGames.push({
                    gameId: gid, ...g,
                    platform: 'browser', launchType: 'hub', launchUrl: g.urls.hub, stats: {}
                });
            });
            goToScreen('screen-sharing');
        }

        // PLATFORM
        function selectPlatform(p, el) {
            document.querySelectorAll('#platform-options .option-btn').forEach(b => b.classList.remove('selected'));
            el.classList.add('selected');
            selectedPlatform = p;
            if (p === 'browser') {
                document.getElementById('launch-options').style.display = 'block';
            } else {
                document.getElementById('launch-options').style.display = 'none';
                selectedLaunchType = 'direct';
                document.getElementById('btn-confirm').disabled = false;
            }
            updateConfirm();
        }

        function selectLaunchType(t, el) {
            document.querySelectorAll('#launch-options .option-btn').forEach(b => b.classList.remove('selected'));
            el.classList.add('selected');
            selectedLaunchType = t;
            updateConfirm();
        }

        function updateConfirm() {
            document.getElementById('btn-confirm').disabled = !(selectedPlatform && (selectedPlatform === 'app' || selectedLaunchType));
        }

        function confirmGame() {
            const g = GAMES[selectedGameId];
            const url = selectedLaunchType === 'hub' ? g.urls.hub : g.urls.browser;
            addedGames.push({
                gameId: selectedGameId, ...g,
                platform: selectedPlatform, launchType: selectedLaunchType, launchUrl: url, stats: detectedStats
            });
            goToScreen('screen-sharing');
            resetState();
        }

        function resetState() {
            selectedGameId = null;
            currentImage = null;
            detectedStats = {};
            selectedPlatform = null;
            selectedLaunchType = null;
            document.querySelectorAll('.game-btn').forEach(b => b.classList.remove('selected'));
            document.getElementById('btn-show-guide').disabled = true;
            const area = document.getElementById('upload-area');
            area.classList.remove('has-image');
            area.innerHTML = `<div class="upload-icon">üì∑</div><h3>Tap to upload screenshot</h3><p>Once you have the screenshot, upload it here</p>`;
            document.getElementById('file-input').value = '';
            document.getElementById('analyze-btn').disabled = true;
        }

        // SHARING
        function toggleSharingMethod(m, el) {
            if (m === 'none') {
                sharingMethods.clear();
                sharingMethods.add('none');
                document.querySelectorAll('#sharing-methods .sharing-option').forEach(o => o.classList.remove('selected'));
                el.classList.add('selected');
                document.getElementById('social-section').style.display = 'none';
            } else {
                sharingMethods.delete('none');
                document.querySelector('#sharing-methods .sharing-option:last-child').classList.remove('selected');
                if (sharingMethods.has(m)) { sharingMethods.delete(m); el.classList.remove('selected'); }
                else { sharingMethods.add(m); el.classList.add('selected'); }
                document.getElementById('social-section').style.display = sharingMethods.size ? 'block' : 'none';
            }
        }

        function toggleSocial(id, el) {
            el.classList.toggle('selected');
            if (el.classList.contains('selected')) socialPlatforms.add(id);
            else socialPlatforms.delete(id);
        }

        function skipSharing() { finishSetup(); }

        function finishSetup() {
            const config = {
                games: addedGames,
                sharing: { methods: [...sharingMethods], platforms: [...socialPlatforms] },
                setupDate: new Date().toISOString()
            };
            localStorage.setItem('gameshelf_config', JSON.stringify(config));
            localStorage.setItem('gameshelf_games', JSON.stringify(addedGames));
            localStorage.setItem('gameshelf_setup_complete', 'true');
            
            document.getElementById('final-games-list').innerHTML = addedGames.map(g => `
                <span class="game-chip" onclick="window.open('${g.launchUrl}','_blank')">
                    ${g.icon} ${g.name} <span style="opacity:0.5">${g.platform === 'app' ? 'üì±' : 'üåê'}</span>
                </span>
            `).join('');
            goToScreen('screen-complete');
            console.log('Setup:', config);
        }

        function launchGameShelf() {
            alert('üéÆ Game Shelf ready!\n\n' + addedGames.map(g => `${g.icon} ${g.name}`).join('\n'));
        }

        function addMoreGames() { goToScreen('screen-welcome'); }

        init();
    </script>
