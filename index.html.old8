                <h3>Tap to upload screenshot</h3>
                <p>Once you have the screenshot, upload it here</p>
            </div>
        </div>
        <input type="file" id="file-input" accept="image/*" onchange="handleFileUpload(event)">
        
        <div class="spacer"></div>
        
        <div class="actions">
            <button class="btn btn-primary" id="analyze-btn" onclick="analyzeImage()" disabled>
                <span class="btn-icon">üîç</span> Analyze Screenshot
            </button>
            <div class="skip-link" onclick="goToScreen('screen-select-game')">‚Üê Back</div>
        </div>
    </div>

    <!-- SCREEN 2C: QUESTIONS PATH -->
    <div class="screen" id="screen-questions">
        <div class="progress-bar">
            <div class="progress-step complete"></div>
            <div class="progress-step active"></div>
            <div class="progress-step"></div>
            <div class="progress-step"></div>
        </div>
        
        <div class="header">
            <h1>What do you play?</h1>
            <p>Select all your daily games</p>
        </div>
        
        <div class="game-grid" id="game-grid-questions"></div>
        
        <div class="spacer"></div>
        
        <div class="actions">
            <button class="btn btn-primary" id="btn-questions-next" onclick="questionsNext()" disabled>
                Next
            </button>
            <div class="skip-link" onclick="goToScreen('screen-welcome')">‚Üê Back</div>
        </div>
    </div>

    <!-- SCREEN 3: CONFIRM -->
    <div class="screen" id="screen-confirm">
        <div class="progress-bar">
            <div class="progress-step complete"></div>
            <div class="progress-step complete"></div>
            <div class="progress-step active"></div>
            <div class="progress-step"></div>
        </div>
        
        <div class="header">
            <h1>Game Found! üéâ</h1>
        </div>
        
        <div class="detection-result success" id="detection-result"></div>
        
        <div class="section-title">How do you play?</div>
        <div class="options-grid" id="platform-options">
