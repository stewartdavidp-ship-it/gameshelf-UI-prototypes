            </button>
            <div class="skip-link" onclick="skipSharing()">Skip for now</div>
        </div>
    </div>

    <!-- SCREEN 5: COMPLETE -->
    <div class="screen" id="screen-complete">
        <div class="progress-bar">
            <div class="progress-step complete"></div>
            <div class="progress-step complete"></div>
            <div class="progress-step complete"></div>
            <div class="progress-step complete"></div>
        </div>
        
        <div class="header">
            <div class="success-check">‚úì</div>
            <h1>You're All Set!</h1>
            <p>Your Game Shelf is ready</p>
        </div>
        
        <div class="games-added">
            <h3>Your Games</h3>
            <div id="final-games-list"></div>
        </div>
        
        <div class="spacer"></div>
        
        <div class="actions">
            <button class="btn btn-primary" onclick="launchGameShelf()">
                <span class="btn-icon">üéÆ</span> Open Game Shelf
            </button>
            <button class="btn btn-secondary" onclick="addMoreGames()">
                <span class="btn-icon">‚ûï</span> Add More Games
            </button>
        </div>
    </div>

    <!-- SCREEN: ANALYZING -->
    <div class="screen" id="screen-analyzing">
        <div class="spacer"></div>
        <div class="loading">
            <div class="spinner"></div>
            <p id="analyzing-status">Analyzing...</p>
        </div>
        <div class="spacer"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/tesseract.js@5/dist/tesseract.min.js"></script>
    <script>
        // ============ GAME DATABASE ============
        const GAMES = {
            wordle: { 
                name: 'Wordle', icon: 'üü©', publisher: 'NYT',
                screenshotGuide: {
                    title: 'üìä Wordle Stats Screen',
                    steps: [
                        'Open <strong>Wordle</strong> after completing today\'s puzzle',
                        'Tap the <strong>üìä stats icon</strong> (top right)',
                        'Screenshot shows: Played, Win %, Current Streak, Max Streak'
